// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Schema {
  id  Int   @id @default(autoincrement())
  title String
  nodes Node[]
}

model Node {
  id  Int   @id @default(autoincrement())
  title String
  positionX Int @default(50)
  positionY Int @default(50)
  schemaID Int

  attributes Attribute[]
  srcEdges Edge[] @relation(name: "source")
  trgtEdges Edge[] @relation(name: "target")
  srcCons Connection[] @relation(name: "source")
  trgtCons Connection[] @relation(name: "target")
  schema Schema @relation(fields: [schemaID], references: [id])
  multiCons MultiConnection[]
}

model Edge {
  id  Int   @id @default(autoincrement())
  srcNodeID Int
  trgtNodeID Int
  refName String
  lowerBound Int?
  upperBound Int?
  isOrdered Boolean @default(false)
  type Int @default(0)

  srcNode Node @relation(name: "source", fields: [srcNodeID], references: [id])
  trgNode Node @relation(name: "target", fields: [trgtNodeID], references: [id])

  srcCons EdgeConnection[] @relation(name: "source")
  trgtCons EdgeConnection[] @relation(name: "target")
}

model Attribute {
  id  Int   @id @default(autoincrement())
  nodeID Int
  text String
  type String?
  
  node Node @relation(fields: [nodeID], references: [id])
  srcAtrs AtrConnection[] @relation(name: "source")
  trgtAtrs AtrConnection[] @relation(name: "target")
  atrMultiCons AtrMultiConnection[]
}

model Connection {
  id  Int   @id @default(autoincrement())
  srcNodeID Int
  trgtNodeID Int

  srcNode Node @relation(name: "source", fields: [srcNodeID], references: [id])
  trgtNode Node @relation(name: "target", fields: [trgtNodeID], references: [id])
}

model MultiConnection {
  id  Int   @id @default(autoincrement())
  nodes Node[]
}

model AtrConnection {
  id  Int   @id @default(autoincrement())
  srcAtrID Int
  trgtAtrID Int

  srcAtr Attribute @relation(name: "source", fields: [srcAtrID], references: [id])
  trgtAtr Attribute @relation(name: "target", fields: [trgtAtrID], references: [id])
}

model AtrMultiConnection {
  id  Int   @id @default(autoincrement())
  attributes Attribute[]
}

model EdgeConnection {
  id  Int   @id @default(autoincrement())
  srcEdgeID Int
  trgtEdgeID Int

  srcEdge Edge @relation(name: "source", fields: [srcEdgeID], references: [id])
  trgtEdge Edge @relation(name: "target", fields: [trgtEdgeID], references: [id])
}
