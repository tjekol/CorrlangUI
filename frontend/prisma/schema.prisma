generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id  Int   @id @default(autoincrement())
  title String

  nodeLabels NodeLabel[]
  edges Edge[]
}

model Edge {
  id  Int   @id @default(autoincrement())
  edgeID Int
  nodeID Int
  positionX Int
  positionY Int
  isAttributeNode Boolean @default(false)

  node Node @relation(fields: [nodeID], references: [id])
}

model NodeLabel {
  id  Int   @id @default(autoincrement())
  nodeID Int
  text String

  node Node @relation(fields: [nodeID], references: [id])
}
