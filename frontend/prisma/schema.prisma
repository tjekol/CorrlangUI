generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schema {
  id  Int   @id @default(autoincrement())
  title String
  nodes Node[]
}

model Node {
  id  Int   @id @default(autoincrement())
  title String
  positionX Int @default(50)
  positionY Int @default(50)
  schemaID Int

  attributes Attribute[]
  srcEdges Edge[] @relation(name: "source")
  trgtEdges Edge[] @relation(name: "target")
  schema Schema @relation(fields: [schemaID], references: [id])
  multiEdges MultiEdge[]
}

model Edge {
  id  Int   @id @default(autoincrement())
  srcNodeID Int
  trgtNodeID Int
  srcMul String?
  trgtMul String?
  type Int @default(0)

  srcNode Node @relation(name: "source", fields: [srcNodeID], references: [id])
  trgNode Node @relation(name: "target", fields: [trgtNodeID], references: [id])
}

model MultiEdge {
  id  Int   @id @default(autoincrement())
  nodes Node[]
}

model Attribute {
  id  Int   @id @default(autoincrement())
  nodeID Int
  text String
  type Int @default(0)
  
  node Node @relation(fields: [nodeID], references: [id])
  srcAtrs AttributeEdge[] @relation(name: "source")
  trgtAtrs AttributeEdge[] @relation(name: "target")
}

model AttributeEdge {
  id  Int   @id @default(autoincrement())
  srcAtrID Int
  trgtAtrID Int

  srcAtr Attribute @relation(name: "source", fields: [srcAtrID], references: [id])
  trgtAtr Attribute @relation(name: "target", fields: [trgtAtrID], references: [id])
}
